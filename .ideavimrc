"SETTINGS
set scrolloff=10
set incsearch
"set number norelativenumber
set number relativenumber
set ruler
set ignorecase
set showmode
set paste
set clipboard=unnamed
set clipboard+=ideaput

"IDEAVIM PLUGINS
plug 'machakann/vim-highlightedyank'
plug 'tpope/vim-commentary'
plug 'preservim/nerdtree'
plug 'terryma/vim-multiple-cursors'


"LEADER
let mapleader = " "

"ALL MODES
map <leader>r <action>(Run)
map <leader>d <action>(Debug)
map <leader>b <action>(ToggleLineBreakpoint)

"INSERT MODE

" Bind arrow keys to esc insert mode
imap <up> <esc><up>
imap <down> <esc><down>
imap <left> <esc><left>
imap <right> <esc><right>


"NORMAL MODE
" Inserting blank lines with enter
nmap <enter> o<esc>
nmap <S-enter> O<esc>

"Highlight all
nmap ga ggVG

"Comments
nmap gcc <action>(CommentByLineComment)
nmap gcd  yy P gcc I<Esc>l

"Navigation
nmap ge :NERDTree<CR>
nmap gq <action>(CloseEditor)
nmap gt <action>(NextTab)
nmap gr <action>(PreviousTab)
nmap gw <C-w>w
nmap gv <C-w>v
nmap gh <C-w>s

"Remapping Control-R to capital U
nmap U <C-r>

